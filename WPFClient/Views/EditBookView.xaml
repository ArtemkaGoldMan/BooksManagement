<Window x:Class="WPFClient.Views.EditBookView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Book" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Edit Book"
                   FontSize="24"
                   Margin="0,0,0,20"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1">
            <!-- Title -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Title:" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         Padding="5"/>
            </StackPanel>

            <!-- Author -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Author:" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                         Padding="5"/>
            </StackPanel>

            <!-- Genre -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Genre:" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Genre, UpdateSourceTrigger=PropertyChanged}"
                         Padding="5"/>
            </StackPanel>

            <!-- Price -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Price:" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, StringFormat=C}"
                         Padding="5"/>
            </StackPanel>

            <!-- Published Date -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Published Date:" Margin="0,0,0,5"/>
                <DatePicker SelectedDate="{Binding PublishedDate}"
                           Padding="5"/>
            </StackPanel>

            <!-- Message Display -->
            <TextBlock Text="{Binding Message}"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Margin="0,10"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="Save Changes"
                    Command="{Binding SaveCommand}"
                    Width="120"
                    Height="30"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>
