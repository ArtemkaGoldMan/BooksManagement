@model BaseLibrary.DTOs.RegisterUserDTO

<h2>Register</h2>

<form method="post" asp-action="Register">
    <div class="form-group" style="margin-bottom: 1rem;">
        <label>Name</label>
        <input asp-for="Name" class="form-control" style="width: 250px;" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-bottom: 1rem;">
        <label>Email</label>
        <input asp-for="Email" class="form-control" style="width: 250px;" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-bottom: 1rem;">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" style="width: 250px;" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-bottom: 1.5rem;">
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" style="width: 250px;" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div style="margin-top: 20px;">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>
